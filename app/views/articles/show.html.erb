<h1><%= @article.title %></h1>
<p>
  Tags:
  <% @article.tags.each do |tag| %>
    <%= link_to tag.name, tag_path(tag) %>
  <% end %>
</p>
 <% unless @article.image.blank? %>
      <%= image_tag @article.image.variant(resize: "300x300") %><br/>
<% end %>
<div class="card-panel red">
  <span class="white-text">
    <%= @article.body %>
  </span>
</div>

<% if logged_in? %>
  <p><%= link_to "Delete", article_path(@article), method: :delete , data: {confirm: "Do you really want to delete the article?"}%></p>
  <p><%= link_to "Edit", edit_article_path(@article) %></p>
<% end %>
<%= link_to "Back", articles_path %>
<%= render partial: 'comments/form' %>
<h4>Comments (<%= @article.comments.size %>)</h4>
<%= render partial: 'articles/comment', collection: @article.comments %>



